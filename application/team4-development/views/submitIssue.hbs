  <script>
    var loggedInId = '';
    var loggedInName = '';
    $(document).ready(function () {
      loggedInId = '{{session.user.id}}';
      loggedInName = '{{session.user.name}}';
      $('#logout').hide();
      $('#hiUser').hide();



