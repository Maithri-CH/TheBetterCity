           <ul class="nav navbar-nav menu_nav ml-auto mr-auto">
             <li class="nav-item active"><a class="nav-link" href="/">Home</a></li>
             <li class="nav-item"><a class="nav-link" href="/submitIssue">Submit Issues</a></li>
             <li class="nav-item"><a class="nav-link" href="/aboutUs">About Us</a></li>
             <li class="nav-item"><a class="nav-link" href="/contact">Contact Us</a></li>
           </ul>
         </div>
       </div>
     </nav>
   </div>
 </header>

 <!-- Title of page -->
 <section class="d-flex justify-content-center">
   <h3>Search Page</h3>
 </section>

 <!-- Search and Filter area -->
  <section>
    <div class="container">
      <div class="row">
        <form class="form-inline w-100" id="tableForm" action="/dropdown" method="get">
          <div class="col-sm-12 d-flex justify-content-center">
            <select class="form-control" data-style="btn-info" name="category_id" id="filter">

              <option name="All" value="0">All</option>
              <optgroup label="Select Category">
                <option name="Litter" value="1">Litter</option>
                <option name="Water Polution" value="2">Water Polution</option>
                <option name="Bio-Hazards" value="3">Bio-Hazards</option>
                <option name="Broken City Property" value="4">Broken City Property</option>
                <option name="Other" value="5">Other</option>
              </optgroup>
              <optgroup label="Select Status">
                <option name="Open" value="6">Open</option>
                <option name="In Progress" value="7">In Progress</option>
                <option name="Resolved" value="8">Resolved</option>
            </select>
            <input id="search" type="text" name="title" placeholder="search by title..." class="form-control w-75" value="">
            <button type="submit" id="searchBtn" class="form-control"><i class="fa fa-search"></i></button>
          </div>
        </form>
      </div>
    </div>
  </section>


  <!-- searcch list  area-->
  <section style="min-height:50%">

    {{#if parks }}
      <div class="container">
        <p class="text-center">{{parks.length}} results found: </p>
        {{#each parks}}
          <div class="container">
            <div class="row">
              <div class="col-sm-1">

              </div>
              <div class="col-sm-10 d-flex justify-content-center">
                <div class="card w-75 m-3">
                  <div class="card-header">
                    {{title}}
                  </div>
                  <div class="card-body">
                    <ul class="list-ìnline d-flex justify-content-between">
                      <!-- <li class="list-inline-item">
                        <h6>Date: <b>{{date}}</b></h6>
                      </li> -->
                      <li class="list-inline-item">
                        <h6>Location: <b>{{location}}</b></h6>
                      </li>
                      <li class="list-inline-item">
                        <h6>Category: <b>{{category}}</b></h6>
                      </li>
                      <li class="list-inline-item">
                        <h6>Status: <b>{{status}}</b></h6>
                      </li>
                    </ul>
                    <h6 class="card-title">Description</h6>
                    <p class="card-text">{{description}}</p>
                    {{!-- {{      <a href="#" class="btn btn-primary btn-sm float-sm-right" data-toggle="modal" data-target="#showDetails">Show Details</a>  }} --}}
                    <a href="/showDetail" class="btn btn-primary btn-sm float-sm-right">Show Details</a>
                  </div>
                </div>
              </div>
              <div class="col-sm-1">

              </div>
            </div>
          </div>

        {{/each}}

    {{else}}
      {{#equal parks.length 0 }}
        <section>
          <div class="h-50 d-flex justify-content-center align-items-center">
            <h6>No records found for current search, try a different category or search keyword</h6>
          </div>
        </section>
      {{/equal}}

    {{/if}}
  </section>

    <!-- Pagination -->
    <section>
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="layui-box layui-laypage layui-laypage-molv" id="layui-laypage-1" >
            <a href="javascript:" class="layui-laypage-first" data-page="0">First Page</a>
            <a href="javascript:" class="layui-laypage-pre" data-page="2">Previous</a>
            <a href="javascript:" class="layui-laypage-next" data-page="2">Next</a>
            <a href="javascript:" class="layui-laypage-last" data-page="2">Last Page</a>
          </div>
        </div>
      </div>
    </section>

  {{> footer}}





  <!-- Show Details Popup -->
  <div class=" modal fade" id="showDetails" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h6 class="modal-title" id="exampleModalLabel">Show Details</h6>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">

        </div>

      </div>
    </div>
  </div>
  <!-- End header MEnu Area -->
