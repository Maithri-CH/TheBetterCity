<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="icon" href="img/favicon.png" type="image/png">
  <title>The Better City</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="css/bootstrap.css">
  <link rel="stylesheet" href="css/bootstrap.min.css">
  <link rel="stylesheet" href="css/themify-icons.css">
  <link rel="stylesheet" href="css/flaticon.css">

  <link rel="stylesheet" href="vendors/fontawesome/css/all.min.css">
  <link rel="stylesheet" href="vendors/animate-css/animate.css">
  <link rel="stylesheet" href="vendors/popup/magnific-popup.css">

  <!-- main css -->
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="css/responsive.css">
  <link rel="stylesheet" href="css/pagination.css">
  <!-- js -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
  <script src="https://github.com/yckart/jquery.storage.js"></script>
  <script type="text/javascript" src="js/sessionStorage.js"></script>
  <script type="text/javascript" src="js/filterOption.js"></script>
  <script type="text/javascript" src="js/pagination.js"></script>
  <script src="http://www.jq22.com/jquery/jquery-1.10.2.js"></script>


  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-144899618-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];

    function gtag() {
      dataLayer.push(arguments);
    }
    gtag('js', new Date());

    gtag('config', 'UA-144899618-1');
    $(document).ready(function() {
      debugger;
      var search_params = new URLSearchParams(document.location.search);
      var category_id = search_params.get('category_id');
      var status_id = search_params.get('status_id');
      var title = search_params.get('title');
      var pageNo = search_params.get('pageNo');
      var from = '{{from}}';
      var to = '{{to}}';
      var total = '{{total}}';

      $('a#nextBtn').click(function() {
        debugger;
        if (to == total) {
          alert('No next records.')
          return;
        }
        pageNo = pageNo + 1;
        window.location.href = '/dropdown?category_id=' + category_id + '&title=' + title + '&pageNo=' + pageNo;
      });
      $('a#prevBtn').click(function() {
        debugger;
        if (from == 1) {
          alert('No previous records.')
          return;
        }
        pageNo = pageNo - 1;
        window.location.href = '/dropdown?category_id=' + category_id + '&title=' + title + '&pageNo=' + pageNo;
      });

    });
  </script>
</head>

<body>

  {{> header}}

  <!-- Search and Filter area -->
  <section>
    <div class="container d-flex justify-content-center">
      <div class="row w-100 d-flex justify-content-center">
        <form class="form-inline w-75" id="tableForm" action="/dropdown" method="get">
          <div class="col-sm-12">
            <select class="form-control" data-style="btn-info" name="category_id" id="filter" style="width:20%">

              <option name="All" value="0">All</option>
              <optgroup label="Select Category">
                <option name="Litter" value="1">Litter</option>
                <option name="Water Polution" value="2">Water Polution</option>
                <option name="Bio-Hazards" value="3">Bio-Hazards</option>
                <option name="Broken City Property" value="4">Broken City Property</option>
                <option name="Other" value="5">Other</option>
              </optgroup>
              <optgroup label="Select Status">
                <option name="Open" value="6">Open</option>
                <option name="In Progress" value="7">In Progress</option>
                <option name="Resolved" value="8">Resolved</option>
            </select>
            <input id="search" type="text" name="title" placeholder="search by title..." class="form-control" value="" style="width:74%">
            <button type="submit" id="searchBtn" class="form-control"><i class="fa fa-search"></i></button>
          </div>
        </form>
      </div>
    </div>
  </section>

  {{> navbar}}

  <main>


    <!-- Title of page -->
    <section class="d-flex justify-content-center">
      <h4>Search Page</h4>
    </section>

    <!-- searcch list  area-->

    {{#if parks }}

      <section style="min-height:50%">
        <div class="container">
          <p class="text-center">Total {{total}} results found. Showing from {{from}} to {{to}} issues.</p>
          {{#each parks}}

            <div class="container">
              <div class="row">
                <div class="col-sm-1">

                </div>
                <div class="col-sm-10 d-flex justify-content-center">
                  <div class="card w-75 m-3">
                    <div class="card-header">
                      {{title}}
                    </div>
                    <div class="card-body">
                      <ul class="list-ìnline d-flex justify-content-between">
                        <!-- <li class="list-inline-item">
                        <h6>Date: <b>{{date}}</b></h6>
                      </li> -->
                        <li class="list-inline-item">
                          <h6>Location: <b>{{location}}</b></h6>
                        </li>
                        <li class="list-inline-item">
                          <h6>Category: <b>{{category}}</b></h6>
                        </li>
                        <li class="list-inline-item">
                          <h6>Status: <b>{{status}}</b></h6>
                        </li>
                      </ul>
                      <h6 class="card-title">Description</h6>
                      <p class="card-text">{{description}}</p>
                      <!-- Show details modal in 'show' partials -->
                      <a href="#" class="btn btn-primary btn-sm float-sm-right" data-toggle="modal" data-target="#showDetails">Show Details</a>
                      {{> show}}



                      {{!--  <a href="/showDetail?issueId={{issue_id}}" class="btn btn-primary btn-sm float-sm-right">Show Details</a>--}}
                    </div>
                  </div>
                </div>
                <div class="col-sm-1">

                </div>
              </div>
            </div>
      </section>

      {{/each}}

      <!-- Pagination -->
      <section>
        <div class="container">
          <div class="row d-flex justify-content-center">
            <div class="layui-box layui-laypage layui-laypage-molv">
              <a class="btn" data-page="2" id="prevBtn">Previous</a>
              <a class="btn" data-page="2" id="nextBtn">Next</a>
            </div>
          </div>
        </div>
      </section>

    {{else}}

      <!-- No Results found -->
      {{#equal parks.length 0 }}
        <section>
          <div class="container">
            <p class="text-center">No records found for current search, try a different category or search keyword</p>
          </div>
        </section>
      {{/equal}}

      <!--  when nothing is serached or when no search result is found  -->
      {{> successStory}}
    {{/if}}
  </main>

  {{> footer}}


</body>

</html>
