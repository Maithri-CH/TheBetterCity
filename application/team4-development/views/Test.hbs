<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Vertical prototype testing</title>
  <link href="/assets/css/bootstrap.css" rel="stylesheet" type="text/css"/>
</head>
<body>

  <h1>Testing page</h1>
  <div class=row>
  <div class="col-sm-1"></div>
  <div class="col-sm-3">
     <div class="input-group input-group-lg">
   <form action="/search" method="get">
     <input id="search" type ="text" name="title" placeholder="search by title..." class="form-control">
     <br>
          <button class="btn btn-default" type="submit">Search</button>
   </form>

   <form id="tableForm" action="/getCategory" method="get">
    <select class="selectpicker" data-style="btn-info" name="category_id">
        <optgroup label="Select Category">
            <option name="All" value="0">All</option>
            <option name="Litter" value="1">Litter</option>
            <option name="Water Polution" value="2">Water Polution</option>
            <option name="Bio-Hazards" value="3">Bio-Hazards</option>
            <option name="Broken City Property" value="4">Broken City Property</option>
            <option name="Other" value="5">Other</option>
        </optgroup>
    </select>
    <input type="submit" />
</form>

   </div>
 </div>
 <div class="col-sm-8">
   <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Photo</th>
      <th scope="col">Location</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
         {{#each parks}}
    <tr scope="row">
        <td>
            {{id}}
        </td>
        <td>
            {{title}}
        </td>
        <td>
          {{#if photo}}
          <img src = "{{photo}}" width="150" height="150">
          {{else}}
          <img src="../IssueImages/no-image.jpg" width="150" height="150">
          {{/if}}
        </td>
        <td>
            {{location}}
        </td>
        <td>
            {{description}}
        </td>
    </tr>
    {{else}}
      {{/each}}
</table>

 </div>
</div>
</body>
</html>
